<h1>All Flats</h1>

<% @flats.each do |flat| %>
  <h3><%= flat.name %></h3>
  <p><%= flat.address %></p>
  <p><%= flat.price_per_night %></p>
  <p><%= flat.number_of_guests %></p>
  <%= link_to "More details", flat_path(flat) %>
  <%= link_to "Edit", edit_flat_path(flat) %>
  <%= link_to "Delete", flat_path(flat), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>